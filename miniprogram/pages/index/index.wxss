/**index.wxss**/

page {
  background-color: #f6f6f6;
}

.container {
    width: 100%;
    height: 100vh;
}

.btns {
    height: 64rpx;
    width: 100%;
    display: flex;
}

.list {
    width: 100%;
    padding: 20rpx 20rpx 0 20rpx;
    box-sizing: border-box;
}
.list .item {
    display: flex;
    border-bottom: solid 1px #bbb;
    height: 64rpx;
    line-height: 64rpx;
}
.list .item:nth-of-type(1){
    border-top: solid 1px #bbb;
}
.list .item .name {
    flex: 1;
}
.list .item .btn {
    width: 340rpx;
    display: flex;
    justify-content: center;
}
.list .item .btn button {
    font-size: 28rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.list .item.head {
    font-weight: bold;
}
.list .item .name {
    color: #666;
}
.list .item .btn {
    color: #999;
}
.list .item .btn button {
   background-color: transparent;
}