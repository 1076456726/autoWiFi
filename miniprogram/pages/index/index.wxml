<!--index.wxml-->
<view class="container">
    <view class="btns">
        <button type="primary" bindtap="dbadd" size="mini">新增WiFi</button>
        <!-- <button type="primary" bindtap="getList" size="mini">查询WiFi</button> -->
        <button type="primary" bindtap="connect" size="mini">连接WiFi</button>
    </view>

    <view class="list">
        <view class="item head">
            <view class="name">WiFi名称</view>
            <view class="btn">操作</view>
        </view>
        <view class="item" wx:for="{{ list }}" wx:key="_id">
            <view class="name">{{ item.name }}</view>
            <view class="btn">
                <button wx:if="{{ item._openid === openid }}" type="default" size="mini" bindtap="edit" data-id="{{ item._id }}">编辑</button>
                <button wx:if="{{ item._openid === openid }}" type="warn" size="mini" bindtap="remove" data-id="{{ item._id }}">删除</button>
                <view wx:if="{{ item._openid !== openid }}">不可编辑</view>
            </view>
        </view>
    </view>

</view>
